<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:background="?attr/colorSurface">

    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?attr/colorSurface"
        android:padding="16dp">

        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="16dp"
            app:cardCornerRadius="28dp"
            app:cardBackgroundColor="?attr/colorPrimaryContainer">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:padding="16dp">

                <com.google.android.material.imageview.ShapeableImageView
                    android:id="@+id/childProfileImage"
                    android:tint="@color/md_theme_onPrimaryContainer"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:src="@drawable/user"
                    app:shapeAppearanceOverlay="@style/ShapeAppearance.Material3.Corner.Full"
                    android:contentDescription="Child profile photo" />

                <TextView
                    android:id="@+id/childName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:text="Child Name"
                    android:textSize="22sp"
                    android:textStyle="bold"
                    android:textColor="?attr/colorOnPrimaryContainer" />
            </LinearLayout>

        </com.google.android.material.card.MaterialCardView>

    </com.google.android.material.appbar.AppBarLayout>

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">

        <LinearLayout
        android:orientation="vertical"
        android:padding="16dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <!-- Dashboard Title -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Dashboard"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="?attr/colorOnSurface" />

        <!-- Container for rows -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingTop="8dp">

            <!-- Row 1 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/todaysZoneTile"
                    android:layout_width="0dp"
                    android:layout_height="160dp"
                    android:layout_margin="8dp"
                    android:layout_weight="1"
                    app:cardElevation="2dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:gravity="center"
                        android:padding="16dp">

                        <TextView
                            android:id="@+id/labelTodaysZone"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Today's Zone"
                            android:textSize="16sp"
                            android:textStyle="bold"
                            android:textColor="?attr/colorOnSurface" />

                        <TextView
                            android:id="@+id/textTodaysZone"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Green"
                            android:textSize="28sp"
                            android:textStyle="bold"
                            android:layout_marginTop="8dp"
                            android:textColor="?attr/colorPrimary" />

                    </LinearLayout>

                </com.google.android.material.card.MaterialCardView>

                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/lastRescueTile"
                    android:layout_width="0dp"
                    android:layout_height="160dp"
                    android:layout_margin="8dp"
                    android:layout_weight="1"
                    app:cardElevation="2dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:gravity="center"
                        android:padding="16dp">

                        <TextView
                            android:id="@+id/labelLastRescue"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Last Rescue Time"
                            android:textSize="16sp"
                            android:textStyle="bold"
                            android:textColor="?attr/colorOnSurface" />

                        <TextView
                            android:id="@+id/textLastRescueTime"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="3h ago"
                            android:textSize="26sp"
                            android:layout_marginTop="8dp"
                            android:textColor="?attr/colorSecondary" />

                    </LinearLayout>

                </com.google.android.material.card.MaterialCardView>
            </LinearLayout>

            <!-- Row 2 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/weeklyCountTile"
                    android:layout_width="0dp"
                    android:layout_height="160dp"
                    android:layout_margin="8dp"
                    android:layout_weight="1"
                    app:cardElevation="2dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:gravity="center"
                        android:padding="16dp">

                        <TextView
                            android:id="@+id/labelWeeklyCount"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Weekly Rescue Count"
                            android:gravity="center"
                            android:textSize="16sp"
                            android:textStyle="bold"
                            android:textColor="?attr/colorOnSurface" />

                        <TextView
                            android:id="@+id/textWeeklyCount"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="4"
                            android:textSize="32sp"
                            android:textStyle="bold"
                            android:layout_marginTop="8dp"
                            android:textColor="?attr/colorTertiary" />

                    </LinearLayout>

                </com.google.android.material.card.MaterialCardView>

                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/trendSnippetTile"
                    android:layout_width="0dp"
                    android:layout_height="160dp"
                    android:layout_margin="8dp"
                    android:layout_weight="1"
                    app:cardElevation="2dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:padding="12dp">

                        <TextView
                            android:id="@+id/labelTrendSnippet"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Trend Snippet"
                            android:textSize="16sp"
                            android:textStyle="bold"
                            android:textColor="?attr/colorOnSurface" />

                        <FrameLayout
                            android:id="@+id/chartContainer"
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_weight="1"
                            android:layout_marginTop="8dp" />

                    </LinearLayout>

                </com.google.android.material.card.MaterialCardView>
            </LinearLayout>

        </LinearLayout>


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Actions"
            android:textSize="20sp"
            android:textStyle="bold"
            android:paddingTop="12dp"
            android:textColor="?attr/colorOnSurface" />

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="8dp"
            android:gravity="center_vertical">

            <!-- Daily Check-In -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnDailyCheckIn"
                style="@style/Widget.Material3.Button.IconButton.Filled"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Daily Check-In"
                android:layout_marginTop="8dp" />

            <!-- Log Controller Usage -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnLogController"
                style="@style/Widget.Material3.Button.IconButton.Filled"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Log Controller Usage"
                android:layout_marginTop="8dp" />

            <!-- Log Rescue Attempt -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnLogRescue"
                style="@style/Widget.Material3.Button.IconButton.Filled"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Log Rescue Attempt"
                android:layout_marginTop="8dp" />

            <!-- Emergency Triage -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnEmergency"
                style="@style/Widget.Material3.Button.IconButton.Filled"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Emergency Triage"
                android:layout_marginTop="8dp" />

            <!-- Set Personal Best -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/setPBButton"
                style="@style/Widget.Material3.Button.IconButton.Filled"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Set Personal Best"
                android:layout_marginTop="8dp" />

            <!-- Inventory -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnInventory"
                style="@style/Widget.Material3.Button.IconButton.Filled"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Inventory"
                android:layout_marginTop="8dp" />

            <!-- Streaks & Badges -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnStreaks"
                style="@style/Widget.Material3.Button.IconButton.Filled"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Streaks &amp; Badges"
                android:layout_marginTop="8dp" />

            <!-- Incident Log -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnIncidentLog"
                style="@style/Widget.Material3.Button.IconButton.Filled"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Incident Log"
                android:layout_marginTop="8dp" />

            <!-- Medicine Logs -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnMedicineLog"
                style="@style/Widget.Material3.Button.IconButton.Filled"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Medicine Logs"
                android:layout_marginTop="8dp" />

            <!-- Summary Charts -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnSummaryCharts"
                style="@style/Widget.Material3.Button.IconButton.Filled"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Summary Charts"
                android:layout_marginTop="8dp" />

            <!-- Manage Account -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnManageAccount"
                style="@style/Widget.Material3.Button.IconButton.Filled"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Manage Account"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="24dp" />

        </LinearLayout>

    </LinearLayout>
    </androidx.core.widget.NestedScrollView>

</androidx.coordinatorlayout.widget.CoordinatorLayout>
