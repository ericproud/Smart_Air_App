<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/main">

    <com.google.android.material.appbar.MaterialToolbar
        android:id="@+id/materialToolbar"
        android:layout_width="match_parent"
        android:layout_height="64dp"
        android:background="?attr/colorSurface"
        android:minHeight="?attr/actionBarSize"
        android:theme="?attr/actionBarTheme"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:navigationIcon="@drawable/outline_close_24"
        app:titleTextAppearance="@style/TextAppearance.Material3.TitleLarge">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="vertical">

            <TextView
                android:id="@+id/title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Daily Check In"
                android:textAppearance="@style/TextAppearance.Material3.TitleLarge" />
        </LinearLayout>
    </com.google.android.material.appbar.MaterialToolbar>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/materialToolbar"
        app:layout_constraintVertical_bias="0.0"
        app:layout_editor_absoluteY="100dp"
        tools:layout_editor_absoluteX="0dp"
        android:padding="24dp"
        android:orientation="vertical"
        >


        <com.google.android.material.card.MaterialCardView
            android:id="@+id/BtmComplete"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:clickable="true"
            android:focusable="true"
            android:foreground="?attr/selectableItemBackground"
            android:padding="0dp"
            app:cardBackgroundColor="?attr/colorPrimaryContainer"
            app:cardCornerRadius="22dp"
            app:cardElevation="4dp"
            app:layout_constraintWidth_percent="0.45">

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <!-- decorative blob -->
                <ImageView
                    android:id="@+id/blob_1"
                    android:layout_width="240dp"
                    android:layout_height="240dp"
                    android:layout_gravity="center"
                    android:alpha="0.18"
                    android:scaleType="centerCrop"
                    android:src="@drawable/blob_soft_1"
                    android:translationX="50dp"
                    android:translationY="-30dp" />

                <!-- content layout -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:src="@drawable/today_24px"
                        app:tint="?attr/colorPrimary" />

                    <TextView
                        style="@style/TextAppearance.AppCompat.Display2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="12dp"
                        android:text="Complete Today's Check In"
                        android:textColor="?attr/colorOnPrimaryContainer"
                        android:textSize="16sp" />
                </LinearLayout>
            </FrameLayout>

        </com.google.android.material.card.MaterialCardView>

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/BtnHistory"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:layout_marginTop="16dp"
            android:clickable="true"
            android:focusable="true"
            android:foreground="?attr/selectableItemBackground"
            android:padding="0dp"
            app:cardBackgroundColor="@color/md_theme_secondaryContainer"
            app:cardCornerRadius="22dp"
            app:cardElevation="4dp"
            app:layout_constraintWidth_percent="0.45">

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <!-- decorative blob -->
                <ImageView
                    android:id="@+id/blob_2"
                    android:layout_width="240dp"
                    android:layout_height="240dp"
                    android:layout_gravity="center"
                    android:alpha="0.18"
                    android:scaleType="centerCrop"
                    android:src="@drawable/blob_soft_2"
                    android:translationX="-40dp"
                    android:translationY="50dp" />

                <!-- content layout -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:src="@drawable/history_24px"
                        app:tint="?attr/colorSecondary" />

                    <TextView
                        style="@style/TextAppearance.AppCompat.Display2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="12dp"
                        android:text="View Check In History"
                        android:textColor="?attr/colorOnSecondaryContainer"
                        android:textSize="16sp" />
                </LinearLayout>
            </FrameLayout>

        </com.google.android.material.card.MaterialCardView>


    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>